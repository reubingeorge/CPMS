@model CPMS.Models.AuthorModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Home" asp-action="RegisterAuthor" class="user-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="FirstName" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="MiddleInitial" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="MiddleInitial" class="form-control" />
            <span asp-validation-for="MiddleInitial" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="LastName" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="Affiliation" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="Affiliation" class="form-control" />
            <span asp-validation-for="Affiliation" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="Department" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="Department" class="form-control" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="Address" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="City" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="State" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="ZipCode" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="ZipCode" class="form-control" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="PhoneNumber" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="Email" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3 align-items-center">
        <label asp-for="Password" class="control-label col-sm-4 h6"></label>
        <div class="col-sm-6">
            <input asp-for="Password" class="form-control" id="user_password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-sm-2">
            <a id="toggle_password"><i class="fa-solid fa-eye"></i></a>
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col text-center">
            <input type="submit" value="Register" class="btn btn-primary" id="form-submission" />
        </div>
        
    </div>
</form>

<script>
    document.getElementById('toggle_password').addEventListener('click', function(e){
        const type = document.getElementById('user_password').getAttribute('type') === 'password' ? 'text' : 'password';
        document.getElementById('user_password').setAttribute('type', type);
        
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
