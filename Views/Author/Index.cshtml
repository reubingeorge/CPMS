@model IEnumerable<CPMS.Models.AuthorModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/datatables/DataTables-1.12.1/css/dataTables.bootstrap5.css"/>
<link rel="stylesheet" href="~/css/author.css"/>
<h1>Authors</h1>

<p>
    <button class="btn btn-success" style="margin-bottom:10px" data-url="@Url.Action("Create")" data-ref="modal" data-action ="create">
        <i class="fa fa-plus"></i>
        Add New
    </button>
</p>
<table class="table table-striped table-bordered" id="user_table" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleInitial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="display:grid;">
                <button type="button" class="btn btn-outline-primary" id="action-button" data-ref="modal" data-action="update"
                 data-id="@item.AuthorID" data-url="@Url.Action("Edit")">Edit</button>

                <button type="button" class="btn btn-outline-info" id="action-button" data-ref="modal" data-action ="read"
                data-id="@item.AuthorID" data-url="@Url.Action("Details")">Details</button>
                <button type="button" class="btn btn-outline-danger" id="action-button" data-action="delete">Delete</button>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>

<div class="modal fade" id="user-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="modal-save-button">Save changes</button>
      </div>
    </div>
  </div>
</div>

@section scripts{
    <script src="/lib/datatables/DataTables-1.12.1/js/jquery.dataTables.js"></script>
    <script src="/lib/datatables/DataTables-1.12.1/js/dataTables.bootstrap5.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="/js/author.js"></script>
}