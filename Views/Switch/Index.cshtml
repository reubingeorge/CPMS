<table class="table table-striped table-bordered" id="author_table" style="width:100%">
    <thead>
        <tr>
            <th>Review Submission Enabled</th>
            <th>Paper Submission Enabled</th>
            <th style="width:20%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.EnabledReviewers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.EnabledAuthors)
            </td>
            <td style="width:20%;">
                @using (Html.BeginForm("Toggle", "Switch"))
                {
                    <input type="submit" name="toggleBtn" value="Toggle Reviews" class="btn btn-outline-primary"/>
                    <input type="submit" name="toggleBtn" value="Toggle Papers" class="btn btn-outline-info"/>
                }
            </td>
        </tr>
    </tbody>
</table>

