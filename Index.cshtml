@model IEnumerable<CPMS.Models.ReviewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assignments</h1>

<link rel="stylesheet" href="~/css/paper_reviewer.css" />
<link rel="stylesheet" href="~/lib/multiselect/styles/multiselect.css" />

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Papers
            </th>
            <th>
               Possible Reviewers
            </th>
            <th>
                Action
            </th>
            
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.ReviewID;
            </td>
            @foreach(var ReviewerID in Model){
            <td>
                <select class="form-select" multiple aria-label="multiple select example">
                    <option selected>Choose 3 reviewers:</option>
                    <option value ="@item" >@item.ReviewerID</option>
                </select>
            </td>
            }
            <td>
                <button type="button" class="btn btn-outline-primary" id="action-button">Submit</button>
            </td>
            
        </tr>
    }
    </tbody>
</table>

